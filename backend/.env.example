# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/getanswers

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-secret-key-min-32-characters-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
MAGIC_LINK_EXPIRE_MINUTES=15

# OAuth Configuration (Gmail)
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@getanswers.com

# Application Configuration
APP_URL=http://localhost:3000
ENVIRONMENT=development

# CORS Settings (comma-separated list)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
