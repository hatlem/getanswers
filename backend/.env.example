# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/getanswers

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
# CRITICAL: Generate a strong random secret key for production
# Generate using: openssl rand -hex 32
# Or Python: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-REPLACE-WITH-RANDOM-64-char-hex
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
MAGIC_LINK_EXPIRE_MINUTES=15

# OAuth Configuration (Gmail) - Optional for initial setup
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Anthropic Configuration - Optional for initial setup
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# GetMailer Configuration (transactional emails: magic links, notifications, digests)
# GetMailer is the internal email solution - NOT for user emails
GETMAILER_API_KEY=your-getmailer-api-key
GETMAILER_URL=https://api.getmailer.io
EMAIL_FROM=noreply@getanswers.co

# Application Configuration
APP_URL=http://localhost:5073

# Environment
ENVIRONMENT=development

# Version
VERSION=0.1.0

# Logging
LOG_LEVEL=INFO

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here

# CORS Settings
# In production, set to your actual frontend URL
# Development defaults are set in config.py

# Stripe Configuration (GetPlatform account)
STRIPE_SECRET_KEY=sk_test_your-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-test-publishable-key
STRIPE_LIVE_SECRET_KEY=sk_live_your-live-key
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Mission Control (get-platform) Integration
GET_PLATFORM_API_URL=https://getplatform.co
GET_PLATFORM_API_KEY=your-get-platform-api-key
GET_PLATFORM_WEBHOOK_SECRET=your-webhook-secret
