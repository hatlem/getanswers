# Database (Railway PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/railway

# Redis (Railway Redis)
REDIS_URL=redis://default:password@host:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Magic Link
MAGIC_LINK_EXPIRE_MINUTES=15

# Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# SMTP (for magic link emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@getanswers.co

# Frontend URL (for magic link redirects)
APP_URL=https://getanswers.up.railway.app
